<div class="d-flex flex-column mx-auto my-auto bg-primary rounded">
  <br/>
  <h2 class="mx-auto">Log in</h2>
  <br/>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-check mx-5">
      <%= f.label :email, class:"form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>

    <div class="form-check mx-5">
      <%= f.label :password, class:"form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check mx-5">
        <%= f.check_box :remember_me, class:"form-check-input mx-3" %>
        <%= f.label :remember_me, class:"form-check-label" %>
      </div>
    <% end %>
    <br/>
    <div class="form-check mx-5">
      <%= f.submit "Log in", class: "btn btn-secondary" %>
    </div>
  <% end %>
  <br/>
  <div class="form-check mx-5">
    <%= render "devise/shared/links" %>
  </div>
  <br/>
</div>


